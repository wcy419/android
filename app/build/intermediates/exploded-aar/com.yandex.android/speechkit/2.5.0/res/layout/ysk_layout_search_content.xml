<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/ysk_search_animation_size">

    <ru.yandex.speechkit.gui.view.CirclesAnimationView
        android:id="@+id/speech_titles"
        android:layout_width="@dimen/ysk_search_animation_size"
        android:layout_height="@dimen/ysk_search_animation_size"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/speech_mic_back"
        android:layout_width="@dimen/ysk_default_icon_size"
        android:layout_height="@dimen/ysk_default_icon_size"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/ysk_ic_mic" />

    <ImageView
        android:id="@+id/speech_progress"
        android:layout_width="@dimen/ysk_default_icon_size"
        android:layout_height="@dimen/ysk_default_icon_size"                        
        android:layout_centerInParent="true" />
  

</RelativeLayout>
