<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ysk_language_item_width"
    android:layout_height="@dimen/ysk_language_item_height"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/language_icon"
        android:layout_width="@dimen/ysk_language_item_icon_size"
        android:layout_height="@dimen/ysk_language_item_icon_size"      
        android:padding="@dimen/ysk_language_item_icon_padding"
        android:layout_marginTop="@dimen/ysk_language_item_icon_margin_top"       
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textSize="@dimen/ysk_language_item_textsize"/>

</LinearLayout>
